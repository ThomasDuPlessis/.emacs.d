#ifndef GEO_OBJ_CPP
#define GEO_OBJ_CPP

#include <stdexcept>
#include "GeometricObjects.hpp"

Rectangle2P::Rectangle2P(Point p1, Point p2){
		if(p1.X < p2.X)
		{
				if(p1.Y < p2.Y)
				{
						this->lowerLeft = p1;
						this->upperRight = p2;
				} else
						throw std::invalid_argument("One Point must be the lower left and"
																				" the other must be the upper right corner of the Rectangle");
		} else
		{
				if( p2.X < p1.X )
				{
						if(p2.Y < p1.Y)
						{
								this->lowerLeft = p2;
								this->upperRight = p1;
						}	else
								throw std::invalid_argument("One Point must be the lower left and the other "
																						"must be the upper right corner of the Rectangle");
				}	else
						throw std::invalid_argument("points can not have same X or Y values");						
		}
						
}

int Rectangle2P::area() {
		return (upperRight.Y - lowerLeft.Y) * (upperRight.X - lowerLeft.X);
}

bool Rectangle2P::isValid() {
		return lowerLeft.X <= upperRight.X && lowerLeft.Y <= upperRight.Y;
}

#endif
